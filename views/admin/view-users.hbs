
<section>
    <div class="container" style="margin-left: 300px; margin-top:30px ;">
     <table id="example" class="table mt-5" id="table_id">
  <thead >
    <tr>
      <th scope="col">No</th>
      <th scope="col">Name</th>
      <th scope="col">Email</th>
      <th scope="col">Phone Number</th>
      <th scope="col">Block User</th>
      <th scope="col">Delete</th>


    </tr>
  </thead>
  <tbody>
      {{#each users}}
     <tr>
      <td style="color: black;">{{counter @index}}</td>
      <td style="color: black;">{{this.Name}}</td>
      <td style="color: black;">{{this.Email}}</td>
      <td style="color: black;">{{this.phoneNumber}}</td>
        <td>
        {{#if this.isUnblocked}}
         {{!-- <a href="/admin/edit-user/{{this._id}}" class="btn btn-primary" onclick="return confirm('Are you want to block {{this.Name}}?')">Block</a> --}}
          <button  class="btn btn-primary" onclick="sweetalertclick1('/admin/edit-user/{{this._id}}')">Block</button>
        {{else}}
         {{!-- <a href="/admin/editt-user/{{this._id}}" class="btn btn-danger" onclick="return confirm('Are you want to unblock {{this.Name}}?')">Unblock</a> --}}
         <button  class="btn btn-danger" onclick="sweetalertclick2('/admin/editt-user/{{this._id}}')">Unblock</button>
        {{/if}}
        </td>
        <td>
          {{!-- <a href="/admin/delete-user/{{this._id}}" class="btn btn-danger" onclick="return confirm('Are you want to unblock {{this.Name}}?')">Delete User</a> --}}
          <button class="btn btn-danger" onclick="sweetalertclick('/admin/delete-user/{{this._id}}')">Delete</button>
        </td>
    </tr>
      {{/each}}
  </tbody> 
</table>
    </div>
</section>

<script>
  function sweetalertclick(value){
  Swal.fire({
  title: 'Are you sure?',
  text: "You won't be delete the user!",
  icon: 'warning',
  showCancelButton: true,
  confirmButtonColor: '#3085d6',
  cancelButtonColor: '#d33',
  confirmButtonText: 'Yes, delete it!'
}).then((result) => {
  if (result.isConfirmed) {
   // Swal.fire(
      //'Deleted!',
      //'Your file has been deleted.',
      //'success'
    window.location = value
  }
})
}
